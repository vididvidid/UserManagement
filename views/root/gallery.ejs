<%- include('../partials/header', { title: 'Gallery | SDPMSS' }) %>

<style>
    .gallery-container {
        max-width: 1200px;
        margin: auto;
        padding: 20px;
    }
    .gallery-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        text-align: center;
        margin-bottom: 40px;
    }
    .gallery-item {
        margin-bottom: 30px;
    }
    .gallery-item img,
    .gallery-item iframe {
        border-radius: 10px;
        width: 100%;
        height: 350px;
        object-fit: cover;
        transition: transform 0.3s;
    }
    .gallery-item img:hover,
    .gallery-item iframe:hover {
        transform: scale(1.05);
    }
    .gallery-item p {
        font-size: 1rem;
        color: #34495e;
        text-align: center;
        margin-top: 10px;
    }
    .modal-content {
        border-radius: 10px;
    }
    .modal-title {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2c3e50;
    }
    .media-info {
        padding: 20px;
    }
    .media-info h5 {
        font-size: 1.5rem;
        font-weight: 600;
        color: #34495e;
    }
    .media-info p {
        font-size: 1.1rem;
        color: #7f8c8d;
    }
    @media (max-width: 768px) {
        .gallery-item {
            margin-bottom: 20px;
        }
        .modal-body {
            flex-direction: column;
        }
        .media-info {
            margin-top: 20px;
            padding: 0;
        }
    }
</style>

<div class="gallery-container mt-5">
    <h2 class="gallery-title">Gallery</h2>
    <div class="row">
        <!-- Image Item -->
        <div class="col-md-4 gallery-item">
            <img src="/assests/sdpmssLogo.png" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="SDPMSS LOGO" data-description="This is the official logo of the SDPMSS Organization" data-type="image" data-src="/assests/sdpmssLogo.png" alt="SDPMSS LOGO">
            <p>SDPMSS LOGO</p>
        </div>
        <!-- Video Item -->
        <div class="col-md-4 gallery-item">
            <img src="https://img.youtube.com/vi/Y3gqoDUtmt4/0.jpg" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="Introduction Video" data-description="An introductory video about SDPMSS Organization" data-type="video" data-src="https://www.youtube.com/embed/Y3gqoDUtmt4" alt="Introduction Video">
            <p>Introduction Video</p>
        </div>
        <!-- Test Images -->
        <div class="col-md-4 gallery-item">
            <img src="https://via.placeholder.com/400" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="Test Image 1" data-description="Description for Test Image 1" data-type="image" data-src="https://via.placeholder.com/800" alt="Test Image 1">
            <p>Test Image 1</p>
        </div>
        <div class="col-md-4 gallery-item">
            <img src="https://via.placeholder.com/400" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="Test Image 2" data-description="Description for Test Image 2" data-type="image" data-src="https://via.placeholder.com/800" alt="Test Image 2">
            <p>Test Image 2</p>
        </div>
        <div class="col-md-4 gallery-item">
            <img src="https://via.placeholder.com/400" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="Test Image 3" data-description="Description for Test Image 3" data-type="image" data-src="https://via.placeholder.com/800" alt="Test Image 3">
            <p>Test Image 3</p>
        </div>
        <div class="col-md-4 gallery-item">
            <img src="https://via.placeholder.com/400" class="img-fluid" data-toggle="modal" data-target="#galleryModal" data-title="Test Image 4" data-description="Description for Test Image 4" data-type="image" data-src="https://via.placeholder.com/800" alt="Test Image 4">
            <p>Test Image 4</p>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="galleryModal" tabindex="-1" role="dialog" aria-labelledby="galleryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="galleryModalLabel">Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body d-flex">
                <div class="media-content">
                    <!-- Content will be injected here by JavaScript -->
                </div>
                <div class="media-info ml-3">
                    <h5 id="mediaTitle"></h5>
                    <p id="mediaDescription"></p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery and Bootstrap Bundle (includes Popper) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
    $('#galleryModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); // Button that triggered the modal
        var title = button.data('title'); // Extract info from data-* attributes
        var description = button.data('description');
        var type = button.data('type');
        var src = button.data('src');

        var modal = $(this);
        modal.find('.modal-title').text(title);
        modal.find('#mediaTitle').text(title);
        modal.find('#mediaDescription').text(description);

        if (type === 'image') {
            modal.find('.media-content').html('<img src="' + src + '" class="img-fluid">');
        } else if (type === 'video') {
            modal.find('.media-content').html('<iframe width="100%" height="400" src="' + src + '" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>');
        }
    });
</script>

<%- include('../partials/footer') %>
